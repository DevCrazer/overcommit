#!/usr/bin/env ruby
require 'pathname'

$: << File.expand_path('../../lib', Pathname.new(__FILE__).realpath)
require 'overcommit'

unless File.symlink?(__FILE__)
  STDERR.puts 'This file is not meant to be called directly.'
  exit 2
end

Overcommit::Utils.load_hooks
Overcommit::GitHook.run_hooks(*ARGV)
